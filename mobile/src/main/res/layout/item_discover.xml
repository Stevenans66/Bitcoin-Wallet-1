<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgCoin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Bitcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            style="@style/TextAppearance.Subtitle2.Medium"
            app:layout_constraintStart_toEndOf="@+id/imgCoin"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imgCoin"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="BTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShort"
            app:layout_constraintStart_toEndOf="@+id/imgCoin"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            style="@style/TextAppearance.Subtitle2"
            android:textSize="12sp"
            android:alpha="0.7"/>

    <com.google.android.material.chip.Chip
            android:text="â‚«600,238,332.04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrice"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            style="@style/TextAppearance.Subtitle2"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/txtName"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/txtName"/>

    <androidx.appcompat.widget.AppCompatTextView
            tools:text="+0.92%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPercent"
            style="@style/TextAppearance.Subtitle2"
            android:textSize="12sp"
            android:alpha="0.7"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/txtShort"
            app:layout_constraintBottom_toBottomOf="@+id/txtShort"
            app:layout_constraintStart_toEndOf="@+id/txtShort"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>