<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hash"
                    app:chipCornerRadius="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    app:chipBackgroundColor="?colorAccent"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.Subtitle1"
                    android:id="@+id/chip"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_copy"
                    android:id="@+id/btnCopyHash"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvHashBlock"
                    app:layout_constraintTop_toTopOf="@+id/tvHashBlock"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="0000000000000000001ec53a5934fa44779d8ab375605cc80fc1f2eb96c76ce8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHashBlock"
                    android:textSize="13sp"
                    style="@style/TextAppearance.Subtitle1.Medium"
                    app:layout_constraintEnd_toStartOf="@+id/btnCopyHash"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/chip"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_block_selected"
                    android:id="@+id/imageView4"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvHashBlock"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/imageView5"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_block_mining"
                    android:id="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintBottom_toTopOf="@+id/tvBlockH"
                    android:layout_marginStart="32dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_block_selected"
                    android:id="@+id/imageView6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintBottom_toTopOf="@+id/tvBlockH"
                    android:layout_marginEnd="32dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="580689"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBlockH"
                    style="@style/TextAppearance.Subtitle1.Medium"
                    android:textColor="#F7B408"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:layout_constraintStart_toStartOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="@+id/imageView4"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?attr/colorControlHighlight"
                    android:id="@+id/view4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvBlockH"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="580688"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPreBlock"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintEnd_toEndOf="@+id/imageView6"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.Subtitle1"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="Mining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txMining"
                    style="@style/TextAppearance.Subtitle1"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"
                    android:layout_marginTop="8dp"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?attr/colorControlHighlight"
                    android:id="@+id/view5"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintEnd_toStartOf="@+id/imageView5"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvBlockH"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
